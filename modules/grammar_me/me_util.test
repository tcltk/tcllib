    0 {0  a}
    1 {0 -1}
    2 {a  0}
    3 {-1 0}
    4 {a  b}
    5 {a -1}
    6 {-1 b}
    7 {-1 -1}
} {
    test ast2tree-1.5.$n {Call with bad AST, bad location information} \
	-returnCodes error \
	-setup {
